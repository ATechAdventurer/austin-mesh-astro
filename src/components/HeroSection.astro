---
export interface CTA {
	label: string;
	href: string;
	className?: string;
}
export interface Props {
	background: string;
	heading: string;
	subheading?: string;
	ctas?: CTA[];
	className?: string;
}
const {
	background,
	heading,
	subheading,
	ctas = [],
	className = '',
} = Astro.props;
---
<section class={`hero ${className}`} style={`background-image: url(${background});`}>
  <div class="hero-content">
    <h1>{heading}</h1>
    {subheading && <h2>{subheading}</h2>}
    <div class="hero-ctas">
      {ctas.map(cta => (
        <a href={cta.href} class={cta.className || 'default'}>{cta.label}</a>
      ))}
    </div>
  </div>
</section> 
